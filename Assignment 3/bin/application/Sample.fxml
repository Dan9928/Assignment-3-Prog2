                              <TextField fx:id="addMaterial" layoutX="567.0" layoutY="80.0" />
                              <TextField fx:id="addType" layoutX="264.0" layoutY="264.0" />
                              <TextField fx:id="addMinimum" layoutX="560.0" layoutY="238.0" />
