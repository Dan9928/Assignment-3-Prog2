<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="application.SampleController">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <TabPane prefHeight="404.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <tabs>
                  <Tab text="Home">
                     <content>
                        <AnchorPane>
                           <children>
                              <Label layoutX="307.0" text="Welcome to Toy Store Company!" />
                              <ListView fx:id="listToys" layoutX="254.0" layoutY="17.0" prefHeight="277.0" prefWidth="542.0" />
                              <Button fx:id="buyButton" layoutX="500.0" layoutY="321.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="81.0" text="Buy" />
                              <Label layoutX="2.0" layoutY="27.0" text="Search Inventory:" />
                              <RadioButton fx:id="searchBySN" layoutX="37.0" layoutY="56.0" mnemonicParsing="false" text="Serial Number">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="group" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="searchByName" layoutX="37.0" layoutY="82.0" mnemonicParsing="false" text="Name" toggleGroup="$group" />
                              <RadioButton fx:id="searchByType" layoutX="37.0" layoutY="106.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="53.0" text="Type" toggleGroup="$group" />
                              <TextField fx:id="enterSN" layoutX="146.0" layoutY="143.0" prefHeight="25.0" prefWidth="99.0" promptText="Enter SN Here..." />
                              <Label layoutX="24.0" layoutY="147.0" text="Serial Number (SN)" />
                              <Label layoutX="24.0" layoutY="187.0" text="Name" />
                              <Label layoutX="24.0" layoutY="230.0" text="Type" />
                              <TextField fx:id="enterName" layoutX="146.0" layoutY="192.0" prefHeight="25.0" prefWidth="100.0" promptText="Enter Name Here..." />
                              <TextField fx:id="enterType" layoutX="146.0" layoutY="239.0" prefHeight="25.0" prefWidth="100.0" promptText="Enter Type Here..." />
                              <Button fx:id="searchButton" layoutX="37.0" layoutY="321.0" mnemonicParsing="false" text="Search" />
                              <Button fx:id="clearButton" layoutX="170.0" layoutY="321.0" mnemonicParsing="false" text="Clear" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
                  <Tab text="Add Toy">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
                  <Tab text="Remove Toy">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
